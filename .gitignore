### Fichiers de configuration sensibles ###
# Exclure tous les fichiers de configuration, sauf les exemples ou templates
/config/*
!/config/db.sql
!/config/schema-relationnel.md
!/config/example.*.php
!/config/example.*.json
!/config/example.*.yml

# Fichiers d'environnement et configuration locale
.env
.env.*
!.env.example
*.local
/db-config.php
/config.php
/settings.php

### Fichiers de cache et logs ###
/tmp/
/temp/
/cache/
/logs/
*.log
*.cache
.sass-cache/
/phpunit.result.cache

### Uploads et contenus générés par les utilisateurs ###
# Dossier de téléchargement temporaire
/public/assets/img/temp/*
!/public/assets/img/temp/.gitkeep

# Dossier d'uploads utilisateurs
/public/uploads/*
!/public/uploads/.gitkeep

# Images utilisateurs redimensionnées
/public/assets/img/users/*
!/public/assets/img/users/.gitkeep

### Fichiers compilés et build ###
# CSS compilés
/public/assets/css/*.min.css
/public/assets/css/dist/

# JavaScript compilés
/public/assets/js/bundles/
/public/assets/js/dist/
/public/assets/js/*.min.js

# Fichiers de build
/build/
/dist/

### Base de données ###
# Fichiers SQL et SQLite
*.sql
!db_schema.sql
!config/db.sql
*.sqlite
*.sqlite3
/dumps/
/backups/

### Tests et documentation ###
/coverage/
/docs/build/
/phpunit.xml
.phpunit.cache/

### Secrets et clés ###
*.pem
*.key
*.cert
*.crt

### Exceptions (fichiers à conserver) ###
# Pages HTML (conserver toutes les pages HTML du site)
!public/pages/**/*.html

# Assets essentiels (conserver JS, CSS, images nécessaires)
!public/assets/js/main.js
!public/assets/js/essential/*.js
!public/assets/css/Styles.css
!public/assets/img/layout/*.{jpg,png,gif,webp,svg}
!public/assets/img/products/*.{jpg,png,gif,webp,svg}
!public/assets/img/collections/*.{jpg,png,gif,webp,svg}

# Vidéos d'arrière-plan
!public/assets/video/background.mp4

# Documentation technique
!README.md
!CONTRIBUTING.md
!LICENSE
