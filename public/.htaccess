# =====================
# CONFIGURATION DE BASE
# =====================
Options -Indexes -MultiViews -ExecCGI
FileETag None
ServerSignature Off

# UTF-8 par défaut
AddDefaultCharset utf-8

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # =====================
    # REDIRECTION HTTPS
    # =====================
    # Décommenter pour production
    # RewriteCond %{HTTPS} !=on
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]
    
    # =====================
    # CANONICALISATION WWW 
    # =====================
    # Décommenter pour producion - Choisir une version
    
    # Version avec www
    # RewriteCond %{HTTP_HOST} !^www\. [NC]
    # RewriteRule ^(.*)$ https://www.%{HTTP_HOST}/$1 [R=301,L]
    
    # Version sans www
    # RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
    # RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
    
    # =====================
    # SÉCURITÉ RENFORCÉE
    # =====================
    # Bloquer les fichiers sensibles
    <FilesMatch "\.(env|sql|ini|log|config|htpasswd|htaccess|db|git|svn)$">
        Require all denied
    </FilesMatch>
    
    # Protection contre les injections
    RewriteCond %{QUERY_STRING} (;|<|>|'|"|\)|%0A|%0D|%22|%27|%3C|%3E|%00) [NC,OR]
    RewriteCond %{QUERY_STRING} (base64_encode|localhost|mosconfig|concat|information_schema) [NC,OR]
    RewriteCond %{QUERY_STRING} (union.*select|load_file|outfile|benchmark) [NC]
    RewriteRule ^(.*)$ - [F,L]
    
    # =====================
    # REWRITING D'URL
    # =====================
    # Pages statiques
    RewriteRule ^$ /pages/Accueil.html [L]
    RewriteRule ^accueil$ /pages/Accueil.html [L]
    RewriteRule ^a-propos$ /pages/APropos.html [L]
    RewriteRule ^mentions-legales$ /pages/legal/PrivacyPolicy.html [L]
    
    # Collections
    RewriteRule ^collections$ /pages/collections/Collections.html [L]
    RewriteRule ^collections/classique$ /pages/collections/Collection-Classic.html [L]
    RewriteRule ^collections/prestige$ /pages/collections/Collection-Prestige.html [L]
    RewriteRule ^collections/sport$ /pages/collections/Collection-Sport.html [L]
    RewriteRule ^collections/edition-limitee$ /pages/collections/Collection-Limited-Edition.html [L]
    
    # Produits
    RewriteRule ^montres$ /pages/products/Montres.html [L]
    RewriteRule ^produit/([a-z0-9-]+)$ /pages/products/DescriptionProduits.html?ref=$1 [NC,L]
    
    # Authentification
    RewriteRule ^connexion$ /pages/auth/login.html [L]
    RewriteRule ^inscription$ /pages/auth/register.html [L]
    
    # API
    RewriteRule ^api/auth/([a-z-]+)$ /php/api/auth/$1.php [L]
    RewriteRule ^api/produits/([a-z-]+)$ /php/api/products/$1.php [L]
    
    # Empêcher le hotlinking des images
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^https?://(www\.)?(elixirdutemps\.com|localhost|127\.0\.0\.1)(:[0-9]+)?(/.*)?$ [NC]
    RewriteRule \.(jpg|jpeg|png|gif|webp)$ - [NC,F,L]
</IfModule>

# =====================
# PERFORMANCES
# =====================
# Compression GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css
    AddOutputFilterByType DEFLATE application/javascript application/x-javascript application/json
    AddOutputFilterByType DEFLATE application/xml application/xhtml+xml application/rss+xml
    AddOutputFilterByType DEFLATE image/svg+xml application/font-woff application/font-woff2
    AddOutputFilterByType DEFLATE font/ttf font/opentype font/x-woff
</IfModule>

# Cache-Control
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
    
    # HTML et XML
    ExpiresByType text/html "access plus 0 seconds"
    ExpiresByType text/xml "access plus 0 seconds"
    
    # CSS et JavaScript
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    
    # Images
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # Polices
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

<IfModule mod_headers.c>
    # Cache pour ressources statiques
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
    
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
    
    <FilesMatch "\.(ttf|ttc|otf|eot|woff|woff2)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
    
    # Sécurité renforcée
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Feature-Policy "geolocation 'none'; camera 'none'; microphone 'none'"
    
    # Anti-clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Décommenter pour production
    # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # Retire l'entête Server
    Header unset Server
</IfModule>

# =====================
# PROTECTION SPÉCIFIQUE
# =====================
# Blocage des accès directs aux fichiers PHP
<FilesMatch "\.php$">
    Require all denied
</FilesMatch>

# Autoriser uniquement certains fichiers PHP
<FilesMatch "(^index\.php|api/.+\.php)$">
    Require all granted
</FilesMatch>

# =====================
# ERREURS
# =====================
ErrorDocument 404 /pages/Accueil.html
ErrorDocument 403 /pages/Accueil.html
ErrorDocument 500 /pages/Accueil.html
